<?xml version="1.0" encoding="UTF-8" ?>
<jcr:root
	xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
	xmlns:cq="http://www.day.com/jcr/cq/1.0"
	xmlns:jcr="http://www.jcp.org/jcr/1.0"
	xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
	jcr:primaryType="nt:unstructured"
	jcr:title="Search bar dialog editor"
	sling:resourceType="cq/gui/components/authoring/dialog">
	<content
		jcr:primaryType="nt:unstructured"
		sling:resourceType="granite/ui/components/coral/foundation/container">
		<items jcr:primaryType="nt:unstructured">
			<columns
				jcr:primaryType="nt:unstructured"
				sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
				<items jcr:primaryType="nt:unstructured">
					<column
						jcr:primaryType="nt:unstructured"
						sling:resourceType="granite/ui/components/coral/foundation/container">
						<items jcr:primaryType="nt:unstructured">
							<searchButtonLabel
								jcr:primaryType="nt:unstructured"
								sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
								fieldLabel="Search button label"
								name="./searchButtonLabel"
								required="{Boolean}true" />
							<searchBarPlaceholderText
								jcr:primaryType="nt:unstructured"
								sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
								fieldLabel="Searchbar placeholder text"
								name="./searchBarPlaceholderText"
								required="{Boolean}true" />
							<noResultsMessage
								jcr:primaryType="nt:unstructured"
								sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
								fieldLabel="No results message"
								fieldDescription="This message will be returned to the user if no search results have been found"
								name="./noResultsMessage"
								required="{Boolean}true" />
							<pagesLocation
								jcr:primaryType="nt:unstructured"
								sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
								fieldLabel="Pages location"
								fieldDescription="Each page under this path will be scanned by the search engine"
								name="./pagesLocation"
								required="{Boolean}true" />
							<assetsLocation
								jcr:primaryType="nt:unstructured"
								sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
								fieldDescription="Each asset under this path will be scanned by the search engine"
								fieldLabel="Assets location"
								name="./assetsLocation"
								required="{Boolean}true" />
						</items>
					</column>
				</items>
			</columns>
		</items>
	</content>
</jcr:root>